{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "camelcase": "off",
        "eqeqeq": [
            "error",
            "smart"
        ],
        "comma-dangle": [
            "warn",
            {
                "objects": "always-multiline",
                "arrays": "always-multiline",
                "functions": "never"
            }
        ],
        "import/no-unresolved": [
            2,
            {
                "ignore": [
                    "everestjs"
                ]
            }
        ],
        "max-len": [
            "warn",
            {
                "code": 120,
                "tabWidth": 2
            }
        ]
    }
}